header 
  .header
    .left-header
      //- logo
      div
        img(src="/img/logo.png" alt="" class='lozad')
      //- search form
      .input-search
        input(type="text" name="" class='search' placeholder="Tìm kiếm...")
        button(type="submit") 
          <i class="fa-regular fa-magnifying-glass"></i>
      //- Mobile menu overlay
    .right-header
      .pay
        //- icon
        <i class="fa-regular fa-money-simple-from-bracket"></i>
        //- text
        p nạp tiền 
      .upload
        //- icon
        <i class="fa-regular fa-upload"></i>
        //- text
        p tải lên
      .register 
        //- icon
        <i class="fa-regular fa-user"></i>
        //- text
        p đăng ký 
      .login 
        //- icon
        <i class="fa-regular fa-right-to-bracket"></i>
        //- text
        p đăng nhập 
      include ./HeaderHambuger
    .mobile-menu
      .mobile-menu-content
        .mobile-search
          input(type="text" placeholder="Tìm kiếm..." class="search-input")
          button
            i.fa-regular.fa-magnifying-glass
        //- Menu links (có thể tái sử dụng nav hiện tại)
        ul.mobile-nav
          li.dropdown
            span.dropdown-toggle
              | Kỹ thuật – Công nghệ
              i.fa-regular.fa-chevron-down
            ul.dropdown-menu
              li: a(href="#") Kiến thức nền tảng
              li: a(href="#") Khoa học ứng dụng
              li: a(href="#") Kỹ thuật đại cương
          li.dropdown
            span.dropdown-toggle
              | Tin tức
              i.fa-regular.fa-chevron-down
            ul.dropdown-menu
              li: a(href="#") Tin công nghệ
              li: a(href="#") Kinh tế số
          li
            .flex.gap-5.py-3.pay
              //- text
              p nạp tiền  
              //- icon
              <i class="fa-regular fa-money-simple-from-bracket"></i>
          li
            .flex.gap-5.py-3.upload
              //- text
              p tải lên
              //- icon
              <i class="fa-regular fa-upload"></i>
