mixin HeaderLanguageVertical()
	ul 
		li.wpml-ls-item
			a(href="") 
				span.wpml-ls-native VN
		ul 
			li 
				a(href="") 
					span EN
mixin HeaderLanguageHorizontal()
	ul 
		li.wpml-ls-item
			a(href="") 
				span.wpml-ls-native VN
		li.wpml-ls-item
			a(href="") 
				span.wpml-ls-native VN
mixin BtnPrimary(text="")
	a(href="" class='btn-primary btn ' + attributes.class)
		span=text
mixin HeaderMenu()
	.header-menu 
		ul 
			-var menu = ['Giới thiệu','Sản phẩm','Dự án', 'Dịch vụ','Thông tin','Tuyển dụng']
			each item in menu
				li.menu-item-has-children
					a(href="")=item
mixin HeaderLanguage()
	.header-language 
		.header-language-active
			ul 
				li.wpml-ls-current-language
					a(href="") 
						span.wpml-ls-native VN
				ul 
					li 
						a(href="") 
							span EN
		.header-language-list
			ul 
				li.wpml-ls-current-language
					a(href="") 
						span.wpml-ls-native VN
				ul 
					li 
						a(href="") 
							span EN


//- component item col mega menu
mixin colMegaMenu(group)
	.drop-down-menu
		each list in group
			ul
				each item in list
					li
						a(href="/")= item

//- item product-docx
mixin itemProductDocx(type)
	- const typeData = {pdf:  { icon: '/img/file-pdf.svg',  bg: 'bg-primary-2/15' },docx: { icon: '/img/file-word.svg', bg: 'bg-primary-1/15' },}[type] || { icon: '/img/file-default.svg', bg: 'bg-gray-300' };
	a.item-product(href="#" class='group')
		.image-product
			img(src="/img/1.jpg" alt="" class='lozad w-full h-full object-cover')
			.icon-favorite(class='transition-all duration-500 group-hover:opacity-100 opacity-0')
				<i class="fa-light fa-heart"></i>
		.title-product
			h6 Dolore consectetur nulla ea veniam officia aute officia Lorem id cupidatat non pariatur.
		.type-product
			img(src=`${typeData.icon}` alt="" class=`${typeData.bg}`)
			.view-product
				div
					<i class="fa-light fa-file"></i> 
					span 50
				div
					<i class="fa-light fa-eye"></i> 
					span 34,6k
				div
					<i class="fa-light fa-download"></i>					
					span 500k

//- heading card new item
mixin heading(title, colorClass)
	h2.card-heading(class=colorClass)= title

//- new item product-docx
mixin newItemProduct(type,colorClass)
	- const typeData = {pdf:  { icon: '/img/file-pdf.svg',  bg: 'bg-primary-2/15' },docx: { icon: '/img/file-word.svg', bg: 'bg-primary-1/15' },}[type] || { icon: '/img/file-default.svg', bg: 'bg-gray-300' };
	a.card.group(href='' class=`${colorClass}`)
		.type-product
			img(src=`${typeData.icon}` alt="" class=`${typeData.bg}`)
			.view-product
				div(class='lg:block hidden') 
					<i class="fa-light fa-heart"></i>
				div
					<i class="fa-light fa-file"></i> 
					span 50
				div
					<i class="fa-light fa-eye"></i> 
					span 34,6k
				div
					<i class="fa-light fa-download"></i>					
					span 500k
		.title-product(class='group-hover:text-primary-1')
			h6 Laborum nostrud laborum ex elit esse sunt laborum ad officia reprehenderit cupidatat dolor deserunt.

//- column product-docx
mixin column(title, colorClass, colorCard)
	- const files = ['docx','pdf','docx','pdf','pdf']
	.card-new-item
		+heading(title, colorClass)
		each f in files
			+newItemProduct(f, colorCard)